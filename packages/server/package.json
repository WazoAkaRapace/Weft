{
  "name": "@weft/server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "$HOME/.bun/bin/bun --watch src/index.ts",
    "build": "tsc",
    "start": "$HOME/.bun/bin/bun dist/index.js",
    "lint": "eslint .",
    "test": "vitest",
    "clean": "rm -rf dist .turbo node_modules",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "$HOME/.bun/bin/bun src/db/seed.ts"
  },
  "dependencies": {
    "@weft/shared": "workspace:*",
    "better-auth": "^1.4.17",
    "drizzle-orm": "^0.45.1",
    "postgres": "^3.4.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.10.5",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
