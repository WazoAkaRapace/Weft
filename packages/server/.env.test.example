# Test environment variables
# Copy this file to .env.test and configure for your local test environment

# Test database URL (separate from development database)
# If not set, will use DATABASE_URL with '_test' suffix
TEST_DATABASE_URL=postgres://localhost:5432/weft_test

# Better Auth configuration for testing
BETTER_AUTH_SECRET=test-secret-key-for-testing-purposes-min-32-chars-long
BETTER_AUTH_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Test upload directory (temp directory for test files)
UPLOAD_DIR=./test-uploads

# FFmpeg path (optional, will use 'ffmpeg' from PATH if not set)
FFMPEG_PATH=ffmpeg

# Face-API models directory for testing
FACEAPI_MODELS_DIR=./test-uploads/models/face-api

# Queue concurrency settings for testing
TRANSCRIPTION_WORKER_CONCURRENCY=1
EMOTION_WORKER_CONCURRENCY=1
HLS_WORKER_CONCURRENCY=1

# Retry settings (lower for faster tests)
TRANSCRIPTION_MAX_RETRIES=1
EMOTION_MAX_RETRIES=1
